{
  "name": "infernos-gambit",
  "version": "1.0.0",
  "description": "A card-based adventure game.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Joseph Elliott",
  "license": "ISC",
  "dependencies": {
    "firebase": "^12.3.0"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.infernosgambit.game",
    "productName": "Inferno's Gambit",
    "files": [
      "**/*",
      "!node_modules/*",
      "node_modules/delaunator/delaunator.min.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "directories": {
      "output": "dist"
    }
  }
}
